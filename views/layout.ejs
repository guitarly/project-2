<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Task Assignment</title>
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="container">
        <div class="header clearfix">
            <nav>
                <ul class="nav nav-pills pull-right">
                    <% if(!currentUser) { %>
                        <li role="presentation"><a href="/users/login">Login</a></li>
                        <li role="presentation"><a href="/users/register">Register</a></li>
                        <% } %>
                            <% if(currentUser) { %>
                                <li role="presentation"><a href="/users/index">Dashboard</a></li>
                                <li class="nav-item">

                                    <li role="presentation"><a href="/users/logout">Logout</a></li>


                                    <li role="presentation">
                                        <a href="#" style="color:blue">
                            Hello:
                            <%= currentUser.name %>
                            </a>
                                    </li>
                                    <% } %>
                </ul>
            </nav>
            <h3 class="text-muted">Project 2 - Task Assignment</h3>
        </div>


        <div class="row ">
            <div class="col-lg-12">
                <%= success_msg.length %>
                    <% if(success_msg.length === 1) { %>
                        <div class="alert alert-success">
                            <%= success_msg %>
                        </div>
                        <%} %>
                            <% if(error_msg.length === 1) { %>
                                <div class="alert alert-danger">
                                    <%= error_msg %>
                                </div>
                                <%} %>
                                    <% if(error === 1 ) { %>
                                        <div class="alert alert-danger">
                                            <%= error %>
                                        </div>
                                        <%} %>


                                            <%- body %>
                                                <%- defineContent('dashboard') %>
                                                    <%- defineContent('login') %>
                                                        <%- defineContent('register') %>


            </div>


        </div>

        <footer>
            Project-2 by (Matthew Nguyen) Copyright &copy 2017
        </footer>

    </div>
    <!-- /container -->
</body>

</html>

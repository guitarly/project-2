<%- contentFor('display-all-users') %>

    <h1>Developers</h1>

    <div class="container ">

        <nav class="navbar navbar-toggleable-md navbar-light bg-faded">
            <ul class="nav navbar-nav navbar-left">

                <% if(currentUser.role === 'Project Manager') { %>
                    <li id="menu-new"><a href="/tasks/new"><span class="glyphicon glyphicon-plus"></span> Add Tasks </a></li>
                    <% } %>

                        <ul class="nav navbar-nav navbar-right">

                            <li id="menu-new"><a href="/tasks"><span class="glyphicon glyphicon-folder-open"></span> Tasks (Assigned) </a></li>
                            <li id="menu-new"><a href="/tasks/nonassignedtask"><span class="glyphicon glyphicon-folder-open"></span> Tasks (Not Assigned ) </a></li>



                        </ul>
            </ul>

        </nav>

        <br>

        <br />


        <div class="row table-responsive">
            <!-- <table class="table table-striped table-bordered table-hover"> -->
            <table id="table-all" class="display" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Name:</th>
                        <th>Role:</th>
                        <th>No. Tasks:</th>
                    </tr>
                </thead>
                <tbody>

                    <% for(var i = 0; i < users.length; i++) { %>
                        <tr>
                            <td>

                                <a href="/users/show/<%=users[i].id; %>">
                                    <%=users[i].name%>
                                </a>
                            </td>
                            <td>
                                <%=users[i].role%>
                            </td>
                            <td>
                                <%=users[i].tasks.length%>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>

        </div>

    </div>
